{% extends 'news/base.jinja'%} 
{%block content%}
<div class="row">
  <div class="col s12">
    <div class="card">
      <div class="card-content">
        <img src="{{ object.author.profile.image.url}}" alt="" />
        <span class="card-title"> {{object.title}}</span>
        <p>{{object.content}}</p>
      </div>
      <div class="card-action">
        by <a href="#">{{object.author}}</a>
        <a href="#">{{object.date_posted}}</a>
        {% if user == object.author %}
        <a class="btn red" href="#">Delete</a>
        <a class="btn green" href="{% url 'post-update' object.id %}">Update</a>
        {%endif%}
      </div>
    </div>
  </div>
</div>
{%endblock%}
